{{!< ../default}}

{{#if @member}}
    {{!-- Logged in: Redirect home --}}
    <script>window.location = '{{@site.url}}';</script>
{{else}}
<article class="post-content">
    <header class="post-content-header">
        <h1 class="post-content-title">Welcome back!,</h1>
        <h5>Sign into your account again.</h5>
    </header>

    <div class="post-content-body">         
        <form data-members-form="signin" class="signin-form" id="signin-form">
        <div class="message-success"><strong>Great!</strong> Check your inbox and click the link to complete signin</div>
        <div class="message-error">Please enter a valid email address!</div>       
            <div class="row gtr-uniform">
                <div class="col-8 col-12-xsmall">
                    <input data-members-email type="email" placeholder="Your email address" required="true" autocomplete="false" />
                </div>
                <div class="col-4 col-12-xsmall">
                    <ul class="actions">
                        <li>
                            <button type="submit" class="primary"> 
                                <span class="button-loader">{{> "icons/loader"}}</span>
                                <span class="button-content">ðŸ”‘ Send your login link!</span> 
                            </button>
                        </li>
                    </ul>
                </div>
            </div>
        </form>
    </div>
</article>
{{/if}}